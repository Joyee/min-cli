{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["lib", "bin"],
  "compilerOptions": {
    "lib": [],
    "module": "ESNext",
    "target": "ESNext",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "exclude": ["node_modules"]
}
